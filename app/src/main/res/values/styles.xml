<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomNavigationText" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">@dimen/dimen_12dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogAlertTheme" parent="@style/Theme.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_card</item>
        <item name="android:buttonTint">@color/app_default_color</item>
        <item name="buttonBarButtonStyle">@style/ButtonStyle.Dialog</item>
    </style>

    <style name="ButtonStyle.Dialog" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@color/app_default_color</item>
    </style>

    <style name="SettingsTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:drawablePadding">20sp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="HintTextViewStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="SettingsTitleTextViewStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="bs_linearlayout_holder_style">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_60dp</item>
        <item name="android:paddingStart">@dimen/dimen_24dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_weight">1</item>
    </style>

    <dimen name="dimen_24dp">24dp</dimen>
</resources>